@model IEnumerable<WebsiteV3.Controllers.GameBase>

@{
    ViewBag.Title = "Index";
}
<br />

<h2 style="padding-left:40%; position:center">List Of Games</h2>
<br />

<p>
</p>

<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.GameArt" alt="No Photo Available" style="width: 300px; " />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>

            <td>
                @Html.ActionLink("Stats", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
