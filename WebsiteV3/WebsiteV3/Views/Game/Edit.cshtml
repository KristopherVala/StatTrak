@model WebsiteV3.Controllers.GameDataBase

@{
    ViewBag.Title = "Edit";
}
<style>  
p,h3,h2,td,tr {
        color: black;
        font-family: 'Segoe UI';
    }
  body{
            background-image:url('/ImgAssets/fresh_snow.png');
            background-attachment:fixed;      
            background-color:transparent;
      }
    </style>
<br /><br />
<div style="width:100%;padding-left:32%">
    <img src="@Model.GameArt" alt="GameLogo" style="width:400px;height:230px;align-content:center;max-height:100%;max-width:100%;" />

</div>
<h2 style="text-align:center">Edit Stats for:  @Html.DisplayFor(model => model.GameName)
</h2>
<br />

 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="text-align:center;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <h4>   @Html.DisplayFor(model => model.Category1)</h4>
        <div class="form-group"style= "padding-left:37%;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data1, "", new { @class = "text-danger" })
            </div>
        </div>

        <h4>   @Html.DisplayFor(model => model.Category2)</h4>
        <div class="form-group" style="padding-left:37%;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data2, "", new { @class = "text-danger" })
            </div>
        </div>
        <h4>   @Html.DisplayFor(model => model.Category3)</h4>

        <div class="form-group" style="padding-left:37%;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data3, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data3, "", new { @class = "text-danger" })
            </div>
        </div>
        <h4>   @Html.DisplayFor(model => model.Category4)</h4>

        <div class="form-group" style="padding-left:37%;">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Data4, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data4, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(t => t.Id)
        @Html.HiddenFor(t => t.GameId)



        <br />
        <div class="form-group" style="text-align:left;">
            <div class="col-md-offset-2 col-md-10" style="align-content:center">
                <input type="submit" value="Save Changes" class="btn btn-default" style="align-content:center" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
