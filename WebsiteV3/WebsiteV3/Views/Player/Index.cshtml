@model IEnumerable<WebsiteV3.Controllers.PlayerBase>

@{
    ViewBag.Title = "Index";
}


<style>
    p, h3, h2, td, tr, h1, th {
        color: black;
        font-family: 'Segoe UI';
    }
</style>


<div class="container">
    <div class="col-12 col-lg-12">
        <div class="col-12 col-lg-12">


            <div style="width:100%; margin-top:0px;padding:0px;margin:0px;height:100%;">
                @*  IMAGE PHOTO GOES HERE *@
        <img src="~/ImgAssets/user-list.png" alt="GameLogo" style="width:90%;height:100px;align-content:center;max-height:100%;max-width:100%;
                padding-left:10%;padding-bottom:0px;">


            </div>
            <br />
            <table class="table">
                <tr>
                    <th>

                    </th>
                    <th style="padding-left:0px;">
                        @Html.DisplayNameFor(model => model.DisplayName)
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.LastLoginDate)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model.OrderBy(item => item.LastLoginDate))
                {
                    <tr>
                        
                        <td style="float: left; padding-left: 8%; margin-left: 5px; display: block;padding-right:0px;">
                            <a href='@Url.Action("Details",new { id = item.Id })'>
                                @if (item.ProfilePhoto.Equals("default"))
                                {
                                    <img src="~/ImgAssets/defaultprofile.png" alt="No Photo Available" style="width: 80px;max-height:80px;max-width:100%;" />

                                }
                                else
                                {
                                <img src="@item.ProfilePhoto" alt="No Photo Available" style="width: 80px;max-height:80px;max-width:100%;" />
                                }
                            </a>

                        </td>

                        <td style="padding-left:0px;">
                            @Html.ActionLink(item.DisplayName, "Details", new { id = item.Id })
                        </td>
                        <td></td>
                        <td></td>

                        <td>
                            @Html.DisplayFor(modelItem => item.LastLoginDate)
                        </td>

                    </tr>
                }

            </table>
        </div>
        </div>
</div>